/* pages/drama/list.wxss */


/* 一条活动的样式 */

.a_record {
    position: relative;
    width: 95%;
    margin: 20rpx auto;
    background: #fff;
}

.a_record .a_record_con {
    padding: 20rpx;
    line-height: 50rpx;
}

.a_record .a_record_t {
    display: block;
}

.a_record .a_record_leftt {
    text-align: right;
}

.a_record .a_record_rightt {
    margin-left: 20rpx;
}

.a_record .drama_coll {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    padding: 0 10rpx;
}

.record_text {
    font-size: 34rpx;
    font-weight: bold;
}

.coll_img {
    width: 50rpx;
    height: 50rpx;
}

.a_record .num {
    position: absolute;
    bottom: 40rpx;
    right: 40rpx;
}

.drama_tou_img {
    width: 120rpx;
    height: 160rpx;
    border-radius: 20rpx;
}

.drama_label {
    width: 100rpx;
    height: 50rpx;
    font-size: 12px;
    margin-right: 10rpx;
    padding: 2rpx 6rpx;
    color: #ADCBE4;
    border: 2rpx solid #ADCBE4;
    border-radius: 10rpx;
}

.drama_des {
    width: 440rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


/* 活动列表样式 城市 */

.drama_list_top {
    padding: 10rpx 20rpx;
    padding-bottom: 0;
}

.top_con {
    height: 70rpx;
}

.top_left {
    width: 160rpx;
}

.top_middle {
    width: 420rpx;
}

.top_con .cafe {
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20rpx;
}

.x_jiantou {
    width: 30rpx;
    height: 30rpx;
}


/* 活动列表样式  搜索框 */

.screen {
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20rpx;
    margin-left: 10rpx;
}

.screen_img {
    width: 30rpx;
    height: 30rpx;
}

.screen_con {
    width: 100%;
}


/* 活动列表样式   加号 */

.add {
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20rpx;
    margin-left: 10rpx;
}

.add_img {
    width: 30rpx;
    height: 30rpx;
}