/* pages/activity/activity.wxss */

.act_top {
    width: 100%;
    height: 170rpx;
    background-color: #fff;
    margin-top: 10rpx;
}

.user {
    width: 124rpx;
    height: 124rpx;
}

.act_avatar {
    width: 120rpx;
    height: 120rpx;
    line-height: 170rpx;
    border-radius: 50%;
    border: 2rpx solid #C6C6C6;
}

.actmotto {
    margin-left: 30rpx;
}

.act_motto {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    display: block;
}

.act_nickname {
    width: 50%;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


/* top 左右布局 */

.act_top .act_left {
    width: 80%;
    height: 100%;
}

.act_top .act_con {
    margin-left: 50rpx;
    margin-top: 20rpx;
}

.act_top .act_right {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}


/* 分享按钮 */

.act_right .share {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}


/* 发起者的描述 */

.act_describe {
    font-size: 16px;
    margin-top: 26rpx;
    line-height: 45rpx;
    background: #fff;
    padding: 30rpx 40rpx;
}


/* 剧本及描述 */

.drama {
    font-size: 16px;
    background: #fff;
    margin-top: 24rpx;
    padding: 20rpx 30rpx;
}

.drama_avatar {
    width: 190rpx;
    height: 190rpx;
    line-height: 170rpx;
    border: 2rpx solid #C6C6C6;
    border-radius: 20rpx;
}

.drama_des {
    font-size: 16px;
    background: #fff;
    margin-top: 10rpx;
    padding: 30rpx 24rpx 0;
    overflow: hidden;
}

.drama .drama_lab {
    margin-top: 5rpx;
    margin-left: -10rpx;
}

.drama .drama_label {
    font-size: 12px;
    margin-left: 10rpx;
    padding: 10rpx;
    color: #ADCBE4;
    border: 2rpx solid #ADCBE4;
    border-radius: 20rpx;
}

.drama_des .drama_xjian {
    width: 100%;
}

.drama_des .drama_xjian_img {
    width: 30rpx;
    height: 30rpx;
    margin-left: 45%;
}

.drama_hide .hide_text {
    font-size: 16px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}


/* 门店及描述 */

.store_des {
    width: 100%;
    background: #fff;
    margin-top: 24rpx;
}

.store_des .store_img {
    width: 100%;
    height: 200rpx;
}

.store_des .store_text {
    padding: 40rpx 30rpx;
    line-height: 50rpx;
}


/* 参加人数 */

.part_avatar {
    width: 100rpx;
    height: 100rpx;
    line-height: 170rpx;
    border-radius: 50%;
    border: 2rpx solid #C6C6C6;
}

.part_num {
    width: 100%;
    background: #fff;
    margin-top: 24rpx;
}

.part_num .part_con {
    padding: 40rpx 40rpx;
}

.part_num .part_peo {
    width: 33.33%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10rpx 0;
}

.part_num .part_bottom {
    margin-top: 20rpx;
    color: #B3B3B3;
    text-align: center;
}


/* 底部按钮 */

.bottom_btn {
    padding: 40rpx 0;
}

.bottom_btn .enter_btn {
    width: 80%;
    margin: 0 auto;
    background: #E53935;
    color: #fff;
    font-weight: bold;
}

.bottom_btn .taken_btn {
    width: 80%;
    margin: 0 auto;
    background: #fff;
    color: #E53935;
    font-weight: bold;
}