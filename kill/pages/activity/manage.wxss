/* pages/activity/manage.wxss */


/* 一条记录的样式 */

.a_record {
    position: relative;
    width: 100%;
    margin-bottom: 20rpx;
    background: #fff;
}

.a_record .a_record_con {
    padding: 40rpx;
    line-height: 50rpx;
}

.a_record .a_record_t {
    display: block;
}

.a_record .a_record_leftt {
    text-align: right;
}

.a_record .a_record_rightt {
    margin-left: 20rpx;
}

.a_record .activity_num {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    padding: 0 10rpx;
    font-size: 12px;
    border: 2rpx solid #8DB7DA;
    color: #8DB7DA;
    border-radius: 50rpx;
}

.a_record .num {
    position: absolute;
    bottom: 40rpx;
    right: 40rpx;
}

.a_record .icon {
    width: 50rpx;
    height: 50rpx;
}

.a_record .icon_img {
    width: 50rpx;
    height: 50rpx;
}

.o_color {
    color: #FF9902;
}

.g_color {
    color: #09BB07;
}


/* 活动管理样式  搜索框 */

.activity_manage_top {
    height: 75rpx;
    padding: 10rpx 20rpx;
}

.screen {
    width: 95%;
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 30rpx;
}

.top_con {
    width: 100%;
    height: 100%;
}

.screen_img {
    margin-right: 30rpx;
    width: 30rpx;
    height: 30rpx;
}

.screen_con {
    width: 95%;
}