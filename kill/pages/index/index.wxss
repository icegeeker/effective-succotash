/**index.wxss**/


/* top 左右布局 */

.user {
    width: 124rpx;
    height: 124rpx;
}

.act_avatar {
    width: 120rpx;
    height: 120rpx;
    line-height: 170rpx;
    border-radius: 50%;
    border: 2rpx solid #C6C6C6;
}

.actmotto {
    margin-left: 30rpx;
}

.act_nickname,
.act_motto {
    widows: 100%;
    height: 60rpx;
    line-height: 60rpx;
    display: block;
}

.act_top {
    width: 100%;
    height: 170rpx;
    background-color: #fff;
    margin-top: 10rpx;
}

.act_top .act_left {
    width: 80%;
    height: 100%;
}

.act_top .act_con {
    margin-left: 50rpx;
    margin-top: 20rpx;
}

.act_top .act_right {
    width: 20%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}


/* 分享按钮 */

.act_right .share {
    width: 32rpx;
    height: 32rpx;
}


/* 首页图片 */

.index_con_img {
    width: 32rpx;
    height: 32rpx;
    margin-left: 65rpx;
}

.index_con_text {
    margin-left: 45rpx;
}

.index_con {
    width: 100%;
    height: 100rpx;
    background: #fff;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}