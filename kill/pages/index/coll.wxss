/* pages/index/coll.wxss */


/* 我收藏的名称 */

.mycoll_name {
    width: 100%;
    height: 60rpx;
    line-height: 80rpx;
    margin-left: 20rpx;
    font-size: 16px;
}


/* 一条收藏的样式 */

.a_coll {
    position: relative;
    width: 95%;
    margin: 20rpx auto;
    background: #fff;
    /* padding: 10rpx 20rpx; */
}

.a_coll .a_coll_con {
    padding: 20rpx;
    line-height: 50rpx;
}

.a_coll .a_coll_text {
    display: block;
}

.a_coll_top {
    width: 50%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.a_coll .a_coll_bottom {
    margin-left: 20rpx;
}

.a_coll .coll_drama_img {
    position: absolute;
    bottom: 0rpx;
    right: 20rpx;
    padding: 0 10rpx;
}

.coll_img {
    width: 50rpx;
    height: 50rpx;
}

.a_coll_cafe_img {
    width: 100%;
    height: 160rpx;
}

.coll_drama_top {
    width: 440rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


/* 活动列表样式  搜索框 */

.drama_search_top {
    height: 75rpx;
    padding: 10rpx 20rpx;
}

.screen {
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top_con {
    width: 100%;
    height: 100%;
}

.screen_img {
    margin-left: 30rpx;
    margin-right: 30rpx;
    width: 30rpx;
    height: 30rpx;
}

.screen_con {
    width: 95%;
}


/* pages/drama/list.wxss */


/* 一条活动的样式 */

.a_record {
    position: relative;
    width: 95%;
    margin: 20rpx auto;
    background: #fff;
}

.a_record .a_record_con {
    padding: 20rpx;
    line-height: 50rpx;
}

.a_record .a_record_t {
    display: block;
}

.a_record .a_record_leftt {
    text-align: right;
}

.a_record .a_record_rightt {
    margin-left: 20rpx;
}

.a_record .drama_coll {
    position: absolute;
    top: 40rpx;
    right: 40rpx;
    padding: 0 10rpx;
}

.coll_img {
    width: 50rpx;
    height: 50rpx;
}

.a_record .num {
    position: absolute;
    bottom: 40rpx;
    right: 40rpx;
}

.drama_tou_img {
    width: 160rpx;
    height: 160rpx;
    border-radius: 20rpx;
}

.drama_label {
    width: 100rpx;
    height: 50rpx;
    font-size: 12px;
    margin-right: 10rpx;
    padding: 10rpx 15rpx;
    color: #ADCBE4;
    border: 2rpx solid #ADCBE4;
    border-radius: 10rpx;
}

.drama_des {
    width: 440rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.top_con {
    height: 70rpx;
}

.top_left {
    width: 160rpx;
}

.top_middle {
    width: 420rpx;
}

.top_con .cafe {
    height: 100%;
    background: #fff;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 20rpx;
}